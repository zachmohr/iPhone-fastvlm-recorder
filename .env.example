# Example environment configuration for iPhone FastVLM recorder + orchestrator
# Copy to .env and fill in any secrets such as OPENAI_API_KEY.

# Redis connection (default localhost)
REDIS_URL=redis://127.0.0.1:6379/0
REDIS_CAPTION_STREAM=iphonelog:captions
REDIS_INSIGHT_STREAM=iphonelog:insights
REDIS_CONSUMER_GROUP=orchestrator
REDIS_TOPIC_STREAM=iphonelog:topics
REDIS_TOPIC_GROUP=topic-aggregator
REDIS_TOPIC_CONSUMER=topic-local

# Inference backends
ORCHESTRATOR_BACKEND=openai
ORCHESTRATOR_MODEL=gpt-5-nano
REASONING_MODEL=gpt-5-nano
TOPIC_BUFFER_SIZE=2
TOPIC_TIME_WINDOW=10
TOPIC_COOLDOWN=600
VOICE_MODEL=gpt-4o-mini-tts
VOICE_VOICE=alloy
VOICE_CONSUMER_GROUP=voice-agent

# Logging
ORCHESTRATOR_LOG_DIR=logs

# Secrets go below (leave blank in example)
OPENAI_API_KEY=
